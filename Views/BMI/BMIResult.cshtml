@model double 
 
@{
    ViewData["Title"] = "BMIResult";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>Result</h3>

<div class="row">
	<div class="col-2"></div>
	<div class="col-4 d-flex justify-content-center align-items-center">
		<h3>@Model</h3>
	</div>
	<div class="col-4">
		<h5>BMI Categories:</h5>
		<p>Underweight &leq; 18.5</p>
		<p>Normal weight = 18.5–24.9</p>
		<p>Overweight = 25–29.9</p>
		<p>Obesity = BMI of 30 or greater</p>
		@if (User.Identity.IsAuthenticated) {
			<a class="btn btn-success mt-2" asp-controller="Result" asp-action="SaveBMIHistory" asp-route-id="@Model">Save Result</a>
			<a class="btn btn-info mt-2" asp-action="ShowChart">Show Chart</a>
		}
	</div>
	<div class="col-2"></div>
</div>
