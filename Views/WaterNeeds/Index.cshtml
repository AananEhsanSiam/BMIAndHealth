@model BMIAndHealth.Models.ViewModels.WNVM
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
	<div class="col-4"></div>
	<div class="col-4 mt-5">
		<h3>Water Needs Calculator</h3>
		<div asp-validation-summary="ModelOnly" class="text-danger"></div>
		<form class="form-group" method="post" asp-action="CalculateWN">
			<label asp-for="@Model.Age"></label>
			<input class="form-control" asp-for="@Model.Age" />
			<span asp-validation-for="@Model.Age" class="text-danger"></span>
			<br />
			<label asp-for="@Model.Weight" class="mt-2"></label>
			<input class="form-control" asp-for="@Model.Weight" />
			<span asp-validation-for="@Model.Weight" class="text-danger"></span>
			<br />
			<input type="submit" class="btn btn-primary mt-3" value="Calculate" />

		</form>
	</div>
	<div class="col-4"></div>
</div>


@section Scripts{
	<partial name="_ValidationScriptsPartial" />
}

